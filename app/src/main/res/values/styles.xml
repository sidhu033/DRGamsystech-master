<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!--App Bar Overlay-->
    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--Pop Up Toolbar -->
    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <!--No Action Bar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Action Bar-->
    <style name="ThemeOverlay.AppCompat.Dark.ActionBar"
        parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Search View-->
    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:maxWidth">10000dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:queryHint">@string/sru</item>
    </style>

    <!--Progress bar theme-->
    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/yellow</item> <!-- Whatever color you want-->
    </style>

    <!--Navigation view text appearance-->
    <style name="NavigationViewTextAppearance">
        <item name="android:ellipsize">end</item>
       <!-- <item name="listPreferredItemPaddingLeft">28dp</item>

        <item name="android:listPreferredItemPaddingRight">58dp</item>-->
        <item name="android:listDivider">@color/yellow</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/helveticalight</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">

    </style>
</resources>
