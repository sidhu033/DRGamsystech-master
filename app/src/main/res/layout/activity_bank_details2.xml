<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banktoolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#0d141c"
        app:contentScrim="#0d141c">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"

                android:src="@drawable/gham" />

            <TextView
                android:id="@+id/txtautitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="@string/bankdetailsshow"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/metropolismedium"
                />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <!-- Account Number-->
    <RelativeLayout
        android:id="@+id/relbank1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/banktoolbar"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/iconbank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/message"
            />

        <TextView
            android:id="@+id/txtbankname1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/iconbank1"
            android:layout_toRightOf="@id/iconbank1"
            android:fontFamily="@font/metropolismedium"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="Account NUmber"
            android:textSize="15sp" />
    </RelativeLayout>

    <!-- IFSC code name-->
    <RelativeLayout
        android:id="@+id/relbank2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/relbank1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/iconbank2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/message"
            />

        <TextView
            android:id="@+id/txtbankholder2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/iconbank2"
            android:layout_toRightOf="@id/iconbank2"
            android:fontFamily="@font/metropolismedium"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="IFSC Code"
            android:textSize="15sp" />
    </RelativeLayout>

    <!-- Bank  name-->
    <RelativeLayout
        android:id="@+id/relbank3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/relbank2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/iconbank3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/message"
            />

        <TextView
            android:id="@+id/txtbankbranch3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/iconbank3"
            android:layout_toRightOf="@id/iconbank3"
            android:fontFamily="@font/metropolismedium"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="Bank Name"
            android:textSize="15sp" />
    </RelativeLayout>

    <!-- Branch name-->
    <RelativeLayout
        android:id="@+id/relbank4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/relbank3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/iconbank4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/message"
            />

        <TextView
            android:id="@+id/txtbankcusid4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/iconbank4"
            android:layout_toRightOf="@id/iconbank4"
            android:fontFamily="@font/metropolismedium"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="Branch Name"
            android:textSize="15sp" />
    </RelativeLayout>


    <!-- Type Of Account-->
    <RelativeLayout
        android:id="@+id/relbank5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/relbank4"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/iconbank5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/message"
            />

        <TextView
            android:id="@+id/txtbanktoa5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/iconbank5"
            android:layout_toRightOf="@id/iconbank5"
            android:fontFamily="@font/metropolismedium"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="Type Of Account"
            android:textSize="15sp" />
    </RelativeLayout>


    <!-- Customer ID-->
    <RelativeLayout
        android:id="@+id/relbank6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/relbank5"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/iconbank6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/message"
            />

        <TextView
            android:id="@+id/txtbankcid6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/iconbank6"
            android:layout_toRightOf="@id/iconbank6"
            android:fontFamily="@font/metropolismedium"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="Customer ID"
            android:textSize="15sp" />
    </RelativeLayout>



    <!--Update bthe fields-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/btnprofback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:backgroundTint="#f8a519"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/scale_10dp"
            android:fontFamily="@font/metropolismedium"
            android:text="@string/back"
            android:textColor="@color/black"

            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>