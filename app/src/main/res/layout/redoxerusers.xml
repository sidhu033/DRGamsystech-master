<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_viewredoxer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/scale_5dp"
    android:elevation="@dimen/scale_10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/scale_10dp"
    cardElevation="@dimen/scale_10dp">

    <LinearLayout
        android:id="@+id/llrowname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/scale_5dp"
        android:gravity="center"
        android:weightSum="4">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgruprofile"
            android:layout_width="30sp"
            android:layout_height="55sp"
            android:layout_weight="1"
            android:src="@drawable/profile" />


        <TextView
            android:id="@+id/redoxuname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imgruprofile"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/scale_10dp"
            android:layout_weight="1"
            android:fontFamily="@font/metropolismedium"
            android:gravity="left"
            android:text="Siddharth Bhore"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/redoxuage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/redoxuname"
            android:layout_weight="1"
            android:fontFamily="@font/metropolismedium"
            android:gravity="end"
            android:singleLine="true"
            android:text="46"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/redoxuslash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/redoxuage"
            android:layout_centerVertical="true"
            android:fontFamily="@font/metropolismedium"
            android:text=" / "
            android:textColor="@color/yellow"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/redoxugender"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/redoxuslash"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:fontFamily="@font/metropolismedium"
            android:text="M"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>


</android.support.v7.widget.CardView>
